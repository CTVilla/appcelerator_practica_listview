<Alloy>
	<Collection id="localLibrary" src="feed" instance="true" />	
	<Window class="container">		
		<ListView id="list" defaultItemTemplate="template" onItemclick="OnItemSelected">
			<Templates>
				<ItemTemplate name="template">
					<View class="row">
						<Label bindId="lbl_title" id="lbl_title" class="labels"/>
	                    <Label bindId="lbl_description" id="lbl_description" class="labels"/>	
					</View>
                </ItemTemplate>
			</Templates>
			<ListSection dataCollection="$.localLibrary">
				<ListItem
					lbl_title:text="{title}"
					lbl_description:text="{description}"
				/>
			</ListSection>
		</ListView>
	</Window>
</Alloy>